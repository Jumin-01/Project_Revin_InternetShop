<Page x:Class="Project_Revin_InternetShop.Pages.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_Revin_InternetShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GamePage">

    <Grid x:Name="MainGameGrid" Background="#FF272727">
        <ScrollViewer>
            <StackPanel>

                <Grid Height="200" Background="#FFFDCCCC" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="HeadImage" Grid.Column="0" Margin="10,0,10,10" Height="180" VerticalAlignment="Bottom" />


                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="GameButton" Grid.Column="2" Content="Save" HorizontalAlignment="Center" Height="30" Width="100" Margin="0,0,40,0" Click="Button_Click"/>
                            <Label x:Name="PriceLabel" Grid.Column="1" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Right"  />

                        </Grid>
                        <Label x:Name="NameLabel" Grid.Row="0" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Name" />
                        <Label x:Name="PublisherLabel" Grid.Row="1" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Publisher" />
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition />

                            </Grid.RowDefinitions>
                            <Label Grid.Row="1" Grid.Column="0" Content="Version" FontSize="14" HorizontalAlignment="Center"/>
                            <Label Grid.Row="1" Grid.Column="1" Content="Rating" FontSize="14" HorizontalAlignment="Center"/>
                            <Label Grid.Row="1" Grid.Column="2" Content="Category" FontSize="14" HorizontalAlignment="Center"/>
                            <Label x:Name="VersionLabel" Grid.Row="0" Grid.Column="0" FontSize="14" HorizontalAlignment="Center" Content="Version" />
                            <Label x:Name="RatingLabel" Grid.Row="0" Grid.Column="1" FontSize="14" HorizontalAlignment="Center" Content="Rating" />
                            <Label x:Name="CategoryLabel" Grid.Row="0" Grid.Column="2" FontSize="14" HorizontalAlignment="Center" Content="Category" />
                        </Grid>



                    </Grid>
                </Grid>


                <Grid Background="#FFF19F9F" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="Description" FontSize="20" VerticalAlignment="Center"/>
                    <TextBlock x:Name="DescriptionLabel" Grid.Row="1" FontSize="14"  Text="Description" TextWrapping="Wrap" />
                </Grid>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
